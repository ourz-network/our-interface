{
  "compilerOptions": {
    "strict": false,
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "paths": {
      "@/app/*": ["app/*"],
      "@/common/*": ["common/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/ethereum/*": ["modules/ethereum/*"],
      "@/modules/*": ["modules/*"],
      "@/pages/*": ["pages/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src"],
  "exclude": ["node_modules", "modules/ethereum/merkle-tree"]
}
